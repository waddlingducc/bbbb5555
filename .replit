# .replit
entrypoint = "index.html"

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[env]
PORT = "5000"

[run]
# This is the new style: put the command inside the table
command = ["static-web-server", "--root", ".", "--host", "0.0.0.0", "--port", "$PORT", "--spa", "index.html"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 38145
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
